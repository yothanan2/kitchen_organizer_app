rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all reads/writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read/write their own user document
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Rules for inventory items
    match /inventoryItems/{itemId} {
      allow read: if request.auth != null; // Allow any authenticated user to read
      
      // Allow creating new items
      allow create: if request.auth != null;

      // Allow updates only if the new quantityOnHand is not negative
      allow update: if request.auth != null 
                    && request.resource.data.quantityOnHand >= 0;
    }

    // Allow broader access for other collections for now
    // TODO: Secure these rules further based on application logic
    match /dishes/{dishId}/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /dailyCompletedTasks/{dayId}/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /orderRequests/{reqId}/{document=**} {
       allow read, write: if request.auth != null;
    }
     match /requisitions/{reqId}/{document=**} {
       allow read, write: if request.auth != null;
    }
    match /suppliers/{supId}/{document=**} {
       allow read, write: if request.auth != null;
    }
     match /units/{unitId}/{document=**} {
       allow read, write: if request.auth != null;
    }
      match /categories/{catId}/{document=**} {
       allow read, write: if request.auth != null;
    }
       match /locations/{locId}/{document=**} {
       allow read, write: if request.auth != null;
    }
    match /dailyTodoLists/{listId}/{document=**} {
        allow read, write: if request.auth != null;
    }
    match /floor_checklist_items/{itemId}/{document=**} {
        allow read, write: if request.auth != null;
    }
    match /dailyOrderingSuggestions/{dayId}/{document=**} {
        allow read, write: if request.auth != null;
    }
  }
}