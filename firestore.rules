rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow collection group queries on 'prepTasks' for any authenticated user.
    match /{path=**}/prepTasks/{taskId} {
      allow read: if request.auth != null;
    }

    // Existing rules...
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow list: if request.auth != null; // Admins need to list users
    }
    
    match /inventoryItems/{itemId} {
      allow read, write: if request.auth != null; // Allow authenticated users to manage inventory
    }
    
    match /suppliers/{supplierId} {
      allow read, write: if request.auth != null;
    }
    
    match /units/{unitId} {
      allow read, write: if request.auth != null;
    }
    
    match /categories/{categoryId} {
      allow read, write: if request.auth != null;
    }
    
    match /locations/{locationId} {
      allow read, write: if request.auth != null;
    }

    match /dishes/{dishId} {
      allow read, write: if request.auth != null;
    }

    match /dishes/{dishId}/prepTasks/{taskId} {
      allow read, write: if request.auth != null;
    }
    
    match /dishes/{dishId}/ingredients/{ingredientId} {
      allow read, write: if request.auth != null;
    }

    match /dailyTodoLists/{date}/{collection}/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /dailyCompletedTasks/{date}/tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
    
    match /dailyOrderingSuggestions/{date}/suggestions/{suggestionId} {
      allow read, write: if request.auth != null;
    }

    match /requisitions/{reqId} {
      allow read, write: if request.auth != null;
    }
    
    match /butcher_request_items/{itemId} {
      allow read, write: if request.auth != null;
    }
    
    match /floor_checklist_items/{itemId} {
      allow read, write: if request.auth != null;
    }
    
    match /dailyFloorChecklists/{date} {
      allow read, write: if request.auth != null;
    }
    
    match /nextDayTasks/{date}/tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
  }
}